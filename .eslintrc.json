{
  "extends": [
    "standard",
    "standard-jsx",
    "plugin:prettier/recommended",
    "prettier/react",
    "prettier/standard"
  ],
  "plugins": ["prettier"],
  "rules": {
    "linebreak-style": ["error", "unix"]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "typescript-eslint-parser",
      "plugins": ["typescript"],
      "rules": {
        "no-undef": "off",
        "no-unused-vars": "off"
      }
    }
  ]
}
